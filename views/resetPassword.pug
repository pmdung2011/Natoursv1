extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Reset your password
      form.form#resetPasswordForm
        .form__group.ma-bt-md
          label.form__label(for='password') New Password
          input#password.form__input(type='password', placeholder='•••••', required, minlength='5')
        .form__group.ma-bt-md
          label.form__label(for='password') New Password Confirm
          input#passwordConfirm.form__input(type='password', placeholder='•••••', required, minlength='5')
        .form__group
          button.btn.btn--green.btn--reset-password Submit